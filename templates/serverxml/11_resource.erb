                 username="<%= @username %>"
                 <%- end -%>
                 <%- if defined?(@password) -%>
                 password="<%= @password %>"
                 <%- end -%>
                 <%- if defined?(@initial_size) -%>
                 initialSize="<%= @initial_size %>"
                 <%- end -%>
                 <%- if defined?(@max_active) -%>
                 maxActive="<%= @max_active %>"
                 <%- end -%>
                 <%- if defined?(@max_idle) -%>
                 maxIdle="<%= @max_idle %>"
                 <%- end -%>
                 <%- if defined?(@min_idle) -%>
                 minIdle="<%= @min_idle %>"
                 <%- end -%>
                 <%- if defined?(@max_wait) -%>
                 minWait="<%= @max_wait %>"
