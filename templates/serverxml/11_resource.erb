                 factory="<%= @factory %>"
                 <%- end -%>
                 <%- if defined?(@driver_class_name) -%>
                 driverClassName="<%= @driver_class_name %>"
                 <%- end -%>
                 <%- if defined?(@resource_url) -%>
                 url="<%= @resource_url %>"
                 <%- end -%>
