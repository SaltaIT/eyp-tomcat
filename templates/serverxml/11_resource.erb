                 <%- if defined?(@time_between_evictionrunsmillis) -%>
                 timeBetweenEvictionRunsMillis="<%= @time_between_evictionrunsmillis %>"
                 <%- end -%>
                 <%- if defined?(@numtests_per_evictionrun) -%>
                 numTestsPerEvictionRun="<%= @numtests_per_evictionrun %>"
                 <%- end -%>
                 <%- if defined?(@init_sql) -%>
                 initSQL="<%= @init_sql %>"
                 <%- end -%>
                 <%- if defined?(@auth) -%>
                 auth="<%= @auth %>"
                 <%- end -%>
                 <%- if defined?(@location) -%>
                 location="<%= @location %>"
                 <%- end -%>
           />
